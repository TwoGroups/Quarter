<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="20dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/collect_simple"
        android:layout_width="40dp"
        android:layout_height="40dp"
        fresco:placeholderImage="@mipmap/raw"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/collect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="天蝎喝牛奶"
        android:textColor="#ff00"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/collect_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/collect_name"
        android:layout_marginLeft="50dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/collect_yuan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        fresco:placeholderImage="@mipmap/yuanjia"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/collect_title_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/collect_simple"
        android:text="天气真没好"
        android:textColor="#ff000000"
        android:textSize="20dp" />

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/collect_videoplayer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/collect_title_name"
        android:layout_marginTop="20dp" />


    <RadioGroup
        android:id="@+id/collect_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/collect_yuan"
        android:layout_alignTop="@+id/collect_videoplayer"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/recommend_xin"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1563"
            android:textColor="#fff"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/recommend_xingxing"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="655"
            android:textColor="#fff"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/select_share"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="503"
            android:textColor="#fff"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/btn4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/select_comment"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.1万"
            android:textColor="#fff"
            android:textSize="18dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/commentA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/collect_videoplayer"
        android:layout_marginTop="30dp"
        android:text="骑猪上高速:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/commentB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentA"
        android:layout_marginTop="10dp"
        android:text="骑猪上高速:"
        android:textSize="20dp" />
</RelativeLayout>