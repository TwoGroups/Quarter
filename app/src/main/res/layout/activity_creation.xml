<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#03A9F4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/creation_fh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="创作页面"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/creation_bj">

        <ImageView
            android:id="@+id/creation_video"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/creation_jokes"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:src="@mipmap/creation_video" />

        <ImageView
            android:id="@+id/creation_jokes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/creation_video"
            android:layout_centerVertical="true"
            android:src="@mipmap/creation_jokes" />


    </RelativeLayout>

</LinearLayout>
