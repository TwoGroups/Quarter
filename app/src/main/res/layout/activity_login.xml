<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbackground"
    android:padding="16dp"
    tools:context="com.erzu.quarter.view.activity.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/back" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/we_chat_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_above="@+id/qq_login"
            android:layout_alignStart="@+id/qq_login"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/weixin" />

        <ImageView
            android:id="@+id/qq_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_above="@+id/other_login"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/qq" />

        <TextView
            android:id="@+id/other_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="其他登录方式"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>
